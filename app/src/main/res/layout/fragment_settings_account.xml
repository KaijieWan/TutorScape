<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_account">

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_text_background"
        android:ems="10"
        android:fontFamily="@font/ubuntu"
        android:hint="Edit Email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/techBlue"
        android:textSize="18sp"
        android:textColor="@color/techBlue" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/rounded_text_background"
        android:ems="10"
        android:fontFamily="@font/ubuntu"
        android:hint="Edit Full Name"
        android:inputType="textPersonName"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ  "
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/techBlue"
        android:textSize="18sp"
        android:textColor="@color/techBlue" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/rounded_text_background"
        android:ems="10"
        android:fontFamily="@font/ubuntu"
        android:hint="Edit Age"
        android:inputType="textPersonName"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ  "
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/techBlue"
        android:textSize="18sp"
        android:textColor="@color/techBlue" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/editAge"
        android:layout_marginTop="235dp"
        android:layout_marginStart="-40dp"
        app:srcCompat="@drawable/calender_icon" />

    <EditText
        android:id="@+id/editMobile"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="295dp"
        android:background="@drawable/rounded_text_background"
        android:ems="10"
        android:fontFamily="@font/ubuntu"
        android:hint="Edit Mobile"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColorHint="@color/techBlue"
        android:textSize="18sp"
        android:textColor="@color/techBlue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/apply_button"
            android:backgroundTint="@color/green"
            android:text="Done"
            android:textColor="@color/techBlue"
            android:textStyle="bold"
            android:background="@drawable/bg_shadow"/>

        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/reset_button"
            android:backgroundTint="@color/red"
            android:text="Cancel"
            android:textColor="@color/techBlue"
            android:textStyle="bold"
            android:background="@drawable/bg_shadow"/>

    </LinearLayout>

</RelativeLayout>