<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageFullActivity"
    android:background="@drawable/tutorscape_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_header"
        android:text="Full Message"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:fontFamily="@font/ubuntu"
        android:textColor="@color/techBlue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text_background"
        android:layout_below="@id/activity_header"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/ubuntu"
            android:text="message title"
            android:textColor="@color/black"
            android:textSize="14sp"
/>

        <TextView
            android:id="@+id/message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:padding="5dp"
            android:text="message date"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/ubuntu"
            android:text="message content"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>