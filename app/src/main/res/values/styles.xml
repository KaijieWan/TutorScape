<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationViewTextAppearanceActive">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BottomNavigationViewTextAppearanceInactive">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="MyRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>

    <style name="CustomBottomNavItemText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="custom.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/techBlue</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:itemBackground">@color/cyan</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>